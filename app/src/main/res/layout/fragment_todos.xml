<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_title"
            android:gravity="center_vertical|center_horizontal" android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/textDark" android:layout_marginTop="35dp"
            android:fontFamily="@font/raleway_medium"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="1dp" android:id="@+id/linearLayoutCompat">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="74"
                    android:textColor="@color/colorGreen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/raleway_bold"
                    android:textSize="36sp"

                    android:id="@+id/textView2"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="pts"
                    android:textColor="@color/colorGreen"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="18sp"

                    android:id="@+id/textView"/>
        </android.support.v7.widget.LinearLayoutCompat>
        <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="24dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/imageButton2"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/linearLayoutCompat">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You are doing great !"
                    android:textColor="@color/textDark"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="16sp"
            />
        </android.support.v7.widget.LinearLayoutCompat>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_share"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="3dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="20dp" app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/imageButton2"/>
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="1dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/card_view_body">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yoga"
                    android:textSize="32sp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorGreen"
                    android:layout_marginBottom="8dp"
                    card_view:layout_constraintBottom_toTopOf="@+id/imageButton3"
                    card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp" card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
                    android:background="@drawable/ic_notification"
                    android:id="@+id/imageButton3"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7pm"
                    android:textColor="@color/colorGreen"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="18sp"
                    android:layout_marginBottom="18dp" card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/imageButton3" android:layout_marginStart="8dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorGreen"
                    card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp" card_view:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="10dp"
        card_view:cardCornerRadius="7dp"
        card_view:cardElevation="1dp">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F1FEFD">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cook"
                android:textSize="32sp"
                android:fontFamily="@font/raleway_medium"
                android:textColor="@color/colorGreen"
                android:layout_marginBottom="8dp"
                card_view:layout_constraintBottom_toTopOf="@+id/imageButton4"
                card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp" card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
                android:background="@drawable/ic_notification"
                android:id="@+id/imageButton4"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12am"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/raleway_medium"
                android:textSize="18sp"
                android:layout_marginBottom="18dp" card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toEndOf="@+id/imageButton4" android:layout_marginStart="8dp"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/colorGreen"
                card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp" card_view:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:layout_marginBottom="10dp"
            card_view:cardCornerRadius="7dp"
            card_view:cardElevation="1dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#F1FEFD">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hang out"
                    android:textSize="32sp"
                    android:fontFamily="@font/raleway_medium"
                    android:textColor="@color/colorGreen"
                    android:layout_marginBottom="8dp"
                    card_view:layout_constraintBottom_toTopOf="@+id/imageButton5"
                    card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp" card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toStartOf="parent" android:layout_marginStart="18dp"
                    android:background="@drawable/ic_notification"
                    android:id="@+id/imageButton5"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19pm"
                    android:textColor="@color/colorGreen"
                    android:fontFamily="@font/raleway_medium"
                    android:textSize="18sp"
                    android:layout_marginBottom="18dp" card_view:layout_constraintBottom_toBottomOf="parent"
                    card_view:layout_constraintStart_toEndOf="@+id/imageButton5" android:layout_marginStart="8dp"/>
            <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="@color/colorGreen"
                    card_view:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="12dp"
                    android:layout_marginBottom="12dp" card_view:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>