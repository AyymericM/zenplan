<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical" android:layout_marginLeft="20dp" android:layout_marginRight="20dp">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_title"
            android:gravity="center_vertical|center_horizontal" android:textSize="30sp" android:textStyle="bold"
            android:textColor="@color/textDark" android:layout_marginTop="35dp"
            android:fontFamily="@font/raleway_medium"/>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="bottom"
            android:layout_marginBottom="56dp" android:layout_marginTop="100dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical"/>
    </ScrollView>

</LinearLayout>