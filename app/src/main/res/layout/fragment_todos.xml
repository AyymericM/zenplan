<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp" android:id="@+id/card">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_title"
            android:gravity="center_vertical|center_horizontal"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/textDark"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/raleway_medium"
    />
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="35dp"
            android:layout_height="48dp">
        <TextView
                android:text="78"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:textSize="30sp"
                android:textColor="@color/colorGreen"

        />
        <TextView
                android:text="pts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="@color/colorGreen"
        />
        <TextView
                android:text="You are doing great !"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:textStyle="bold"
                android:layout_weight="1"
        />
        <ImageView
                android:layout_width="9dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageView"
                android:layout_weight="1"
        />
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="377dp" android:layout_gravity="bottom"
            android:layout_marginBottom="56dp" android:layout_marginTop="100dp" android:id="@+id/scroll">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
    </ScrollView>

</LinearLayout>